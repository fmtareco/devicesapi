<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- General logging level -->
    <property name="LOG_LEVEL" value="INFO"/>
<!--    <pattern>-->
<!--        {-->
<!--        "level":"%level",-->
<!--        "traceId":"%X{traceId}",-->
<!--        "spanId":"%X{spanId}",-->
<!--        "logger":"%logger",-->
<!--        "timestamp":"%d{ISO8601}",-->
<!--        "message":"%msg"-->
<!--        }-->
<!--    </pattern>-->

    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
<!--        <encoder class="net.logstash.logback.encoder.LogstashEncoder">-->
<!--            &lt;!&ndash; Add common fields to every log message &ndash;&gt;-->
<!--            <customFields>{"app":"device-api","env":"local"}</customFields>-->
<!--        </encoder>-->
        <encoder>
<!--            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} -%kvp- %msg%n</pattern>-->
            <pattern>[%thread] %logger{36} -%kvp- %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/device-api.json</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/device-api.%d{yyyy-MM-dd}.json</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %X{traceId} %X{spanId} %-5level %logger{36} -%kvp- %msg%n</pattern>
<!--            <pattern>-->
<!--                {-->
<!--                "timestamp":"%d{ISO8601}",-->
<!--                "level":"%level",-->
<!--                "traceId":"%X{traceId}",-->
<!--                "spanId":"%X{spanId}",-->
<!--                "logger":"%logger",-->
<!--                "message":"%msg"-->
<!--                }-->
<!--            </pattern>-->
        </encoder>
    </appender>
    <!-- Application loggers -->
    <root level="${LOG_LEVEL}">
        <appender-ref ref="JSON_CONSOLE"/>
        <appender-ref ref="JSON_FILE"/>
    </root>

</configuration>
